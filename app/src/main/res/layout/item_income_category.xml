<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.mywallet.data.models.IncomeCategory" />

        <variable
            name="model"
            type="com.mywallet.data.models.IncomeCategory" />

        <variable
            name="listener"
            type="com.mywallet.ui.databinding.handlers.OnModelClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvIncomeCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text='@{model.name}'
            android:textColor="@color/text"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_edit_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="@{() -> listener.onClick(model)}"
            android:src="@android:drawable/ic_menu_edit" />
    </RelativeLayout>
</layout>